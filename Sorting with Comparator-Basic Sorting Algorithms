#include<bits/stdc++.h>
using namespace std;
bool compare(int a,int b)
{
    return a<b;
}

bool compare2(int a,int b)
{
    return a>b;
}
vector<int> sortingWithComparator(vector<int> a, bool flag){
    // your code  goes here
    if(flag)
    sort(a.begin(),a.end(),compare);
    else
    sort(a.begin(),a.end(),compare2);
    
    return a;
}
